                  <!-- post loading script -->   
                  <script>

                  $(document).ready(function() {

                      $.getJSON('https://bmrf.me/api/get_recent_posts?count=7', function (data) {
                      for (var i in data.posts) {
                      $('.stage').append('<li class=\"slide xlarge-25 large-33 medium-33 small-50 tiny-100\" onclick=\"window.location = \'../' + data.posts[i].slug + '/\'\"><img class=\"half-bottom-space\" src=\"' + data.posts[i].thumbnail + '\"><h4 class=\"no-margin\">' + data.posts[i].title + '</h4><p>published <span>' + data.posts[i].date + '</span> in <span>' + data.posts[i].categories[0].title + '</span></p></div></li>');

                      }
                      
                    }).done(function() {
                      Ink.requireModules(['Ink.UI.Carousel_1'], function(InkCarousel) {
                            new InkCarousel('#recent_posts', {pagination: '#p1'});
                        });
                    }).fail(function() {
                      $('article').append('<h4>The recent articles are having a fistfight and can\'t be retrieved.</h4>');
                    });
                  });
                  </script>       

